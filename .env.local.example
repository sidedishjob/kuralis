# supabase
NEXT_PUBLIC_SUPABASE_URL=              # 例: https://abcxyz.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=         # パブリックな anon キー
SUPABASE_SERVICE_ROLE_KEY=             # 管理API用の service_role キー（サーバーサイドのみで使用）

# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=       # 例: G-XXXXXXXXXX

# メール送信設定（例: nodemailer）
EMAIL_USER=                            # SMTPユーザー名（例: xxx@gmail.com）
EMAIL_PASS=                            # SMTPパスワード（またはAppパスワード）
EMAIL_TO=                              # 管理者宛のメールアドレス（例: xxx@example.com）

# サイトURL（例: Google認証後のリダイレクト先で使用）
NEXT_PUBLIC_SITE_URL=                  # 例: https://yourdomain.com

# ゲストログイン用アカウント（開発用・限定公開用）
NEXT_PUBLIC_GUEST_EMAIL=               # 例: guest@example.com
NEXT_PUBLIC_GUEST_PASSWORD=            # 例: guest1234
